<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:scrollbars="vertical" >

 <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <include layout="@layout/status_bar"/>	
     
	<TableLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="top"
	    android:layout_margin="@dimen/outer_margin"
	    android:orientation="vertical"
	    android:scrollbars="vertical"
	    tools:context="at.campus02.asy.DetailActivity" >
	
	    <TableRow
	        android:id="@+id/tableRow1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1" >
	
	        <TextView
	            android:id="@+id/titel"
	            android:textSize="18sp"
	            android:textStyle="bold" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" />
	    </TableRow>
	
	    <TableRow
	        android:id="@+id/tableRow2"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1" >
	        
	        <TextView
	            android:id="@+id/zeit"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" />
	    </TableRow>
	    
	    <TableRow
	        android:id="@+id/tableRow11"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1" >
	
	
	        <TextView
	            android:id="@+id/details"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" />
	    </TableRow>
	
	    <View
	        android:layout_height="1dip"
	        android:layout_marginBottom="@dimen/outer_margin"
	        android:layout_marginTop="@dimen/outer_margin"
	        android:background="#FF909090" />
	    
	    <TableRow
	        android:id="@+id/tableRow12"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1" >
	
	        <TextView
	            android:id="@+id/titelBewertung"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/stringBewertung"
	            android:textSize="16sp"
	            android:textStyle="bold" />
	
	    </TableRow>
	
	    <TableRow
	        android:id="@+id/tableRow9"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1" 
	        android:gravity="center_horizontal" >
	        
	        <RatingBar
	            android:id="@+id/bewertung"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:numStars="5"
	            android:stepSize="1.0" />
	
	    </TableRow>
	    
	    <TableRow
	        android:id="@+id/tableRow4"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1" 
	        android:gravity="center_horizontal" >
	
	        <TextView
	            android:id="@+id/bewertungString"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" />
	    </TableRow>
	    
	    <View
	        android:layout_height="1dip"
	        android:layout_marginBottom="@dimen/outer_margin"
	        android:layout_marginTop="@dimen/outer_margin"
	        android:background="#FF909090" />
	    
	    <TableRow
	        android:id="@+id/tableRow8"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1" >
	
	        <TextView
	            android:id="@+id/textView8"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/notiz"
	            android:textSize="16sp"
	            android:textStyle="bold" />
	
	    </TableRow>
	    
	    <TableRow
	        android:id="@+id/tableRow10"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="@dimen/outer_margin"
	        android:layout_weight="1" >
	
	        <TextView
	            android:id="@+id/notiz"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/outer_margin" />
	
	    </TableRow>
	
	</TableLayout>
</LinearLayout>
</ScrollView>