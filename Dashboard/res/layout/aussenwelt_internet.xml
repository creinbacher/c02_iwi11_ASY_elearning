<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" 
	android:layout_height="match_parent"
	android:orientation="vertical" 
	style="@style/paddedLayout"
	>
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		style="@style/Widget.Text.H1"
		android:text="@string/txt_aussenwelt_internet" 
		/>
	<TextView
		style="@style/Widget.Text.H2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/txt_aussenwelt_internet_adresse"
		/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		>
		<EditText
			android:id="@+id/ed_aussenwelt_internet_adresse"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:inputType="textUri"
			/>
		<Button android:id="@+id/btn_aussenwelt_internet_go"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/btn_aussenwelt_internet_go"
			android:onClick="onButtonClick"
			/>
	</LinearLayout>
	<WebView
		android:id="@+id/wv_aussenwelt_internet"
		android:layout_width="match_parent"
		android:layout_height="match_parent" 
		/>
</LinearLayout>
