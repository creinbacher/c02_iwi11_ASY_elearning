<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	style="@style/paddedLayout"
	>
	<TextView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		style="@style/Widget.Text.H1"
		android:text="@string/txt_hintergrund_services"
		/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		>
		<Button android:id="@+id/btn_hintergrund_services_start"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/btn_hintergrund_services_start"
			android:onClick="onButtonClick"
			/>
		<Button android:id="@+id/btn_hintergrund_services_stop"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/btn_hintergrund_services_stop"
			android:onClick="onButtonClick"
			/>
	</LinearLayout>
	<TextView
		android:id="@+id/txt_hintergrund_services_meldung"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		style="@style/Widget.Text.H2"
		/>
</LinearLayout>
