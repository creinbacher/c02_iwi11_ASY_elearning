<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" 
	android:orientation="vertical"
	style="@style/paddedLayout"
	>
	<TextView
		style="@style/Widget.Text.H1"
		android:text="@string/txt_hardware_eingabe"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		/>
	<TableLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:stretchColumns="1"
		>
		<TableRow>
			<TextView
				android:text="@string/txt_hardware_eingabe_typ"
				/>
			<TextView
				android:id="@+id/txt_hardware_eingabe_typ"
				android:gravity="right"
				/>
		</TableRow>
		<TableRow>
			<TextView
				android:text="@string/txt_hardware_eingabe_koordinate"
				/>
			<TextView
				android:id="@+id/txt_hardware_eingabe_koordinate"
				android:gravity="right"
				/>
		</TableRow>
		<TableRow>
			<TextView
				android:text="@string/txt_hardware_eingabe_detail"
				/>
			<TextView
				android:id="@+id/txt_hardware_eingabe_detail"
				android:gravity="right"
				/>
		</TableRow>
	</TableLayout>
	
</LinearLayout>
