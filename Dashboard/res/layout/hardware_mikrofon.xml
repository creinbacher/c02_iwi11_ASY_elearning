<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" 
	android:orientation="vertical"
	style="@style/paddedLayout"
	>
	<TextView
		style="@style/Widget.Text.H1"
		android:text="@string/txt_hardware_mikrofon"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		/>
	<Button
		android:id="@+id/btn_hardware_mikrofon_aufnehmen"
		android:layout_width="match_parent"
		android:layout_height="50dip"
		android:text="@string/btn_hardware_mikrofon_aufnehmen"
		android:onClick="onButtonClick"
		android:drawableLeft="@android:drawable/ic_btn_speak_now"
		/>
	<Button
		android:id="@+id/btn_hardware_mikrofon_abspielen"
		android:layout_width="match_parent"
		android:layout_height="50dip"
		android:text="@string/btn_hardware_mikrofon_abspielen"
		android:onClick="onButtonClick"
		android:enabled="false"
		/>
</LinearLayout>
