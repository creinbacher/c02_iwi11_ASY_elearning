<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	style="@style/paddedLayout"
	>
	<TextView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		style="@style/Widget.Text.H1"
		android:text="@string/txt_hintergrund"
		/>
	<Button android:id="@+id/btn_hintergrund_broadcasts"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/btn_hintergrund_broadcasts"
		android:onClick="onButtonClick"
		/>
	<Button android:id="@+id/btn_hintergrund_services"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/btn_hintergrund_services"
		android:onClick="onButtonClick"
		/>
</LinearLayout>