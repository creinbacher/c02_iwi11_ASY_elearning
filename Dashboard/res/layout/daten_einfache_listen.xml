<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="10dip"
	>
	<TextView
		style="@style/Widget.Text.H1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/txt_daten_einfacheListen"
		/>
	<TextView
		style="@style/Widget.Text.H2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/txt_daten_adapter_fruchtliste"
		/>
	<Spinner
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:entries="@array/fruechte"
		/>
	<TextView
		style="@style/Widget.Text.H2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/txt_daten_adapter_laenderliste"
		/>
	<ListView
		android:id="@+id/android:list"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		/>
	<TextView 
	    android:id="@+id/android:empty"
	    android:text="@string/txt_liste_leer"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    />
</LinearLayout>
