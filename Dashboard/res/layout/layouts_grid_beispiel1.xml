<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:orientation="horizontal"
    style="@style/paddedLayout" >

    <TextView
        android:layout_gravity="fill_horizontal"
        android:gravity="right"
        android:paddingRight="12dp"
        android:text="@string/txt_erstes_feld"
        style="@style/textMedium" />

    <EditText
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:hint="@string/txt_erstes_feld" >

        <requestFocus />
    </EditText>

    <TextView
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:gravity="right"
        android:paddingRight="12dp"
        android:text="@string/txt_zweites_feld"
        style="@style/textMedium" />

    <EditText
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:hint="@string/txt_zweites_feld" />

    <Button
        android:layout_width="80dp"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:onClick="onButtonClick"
        android:text="@string/txt_noe" />

    <Button
        android:layout_width="80dp"
        android:layout_gravity="start"
        android:onClick="onButtonClick"
        android:text="@string/txt_ja" />

    <Space
        android:layout_column="3"
        android:layout_gravity="fill_vertical"
        android:layout_row="3" />

</GridLayout>