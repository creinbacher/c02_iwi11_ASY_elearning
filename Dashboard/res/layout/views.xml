<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        style="@style/paddedLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextView1"
            style="@style/Widget.Text.H1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_views" />

        <!-- Label / Text -->

        <TextView
            android:id="@+id/TextView2"
            style="@style/Widget.Text.H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView1"
            android:text="@string/txt_textview" />

        <TextView
            android:id="@+id/TextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView2"
            android:text="@string/txt_textview_text" />

        <!-- Schaltfläche -->

        <TextView
            android:id="@+id/TextView4"
            style="@style/Widget.Text.H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView3"
            android:text="@string/txt_button" />

        <Button
            android:id="@+id/btn_views_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView4"
            android:text="@string/txt_button_text" />

        <!-- Bild -->

        <TextView
            android:id="@+id/TextView5"
            style="@style/Widget.Text.H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_views_button"
            android:text="@string/txt_togglebutton" />

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView5" >

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textOff="@string/txt_aus"
                android:textOn="@string/txt_an" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="@string/txt_aus"
                android:textOn="@string/txt_an" />
        </LinearLayout>

        <TextView
            android:id="@+id/TextView6"
            style="@style/Widget.Text.H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayout1"
            android:text="@string/txt_imageview" />

        <ImageView
            android:id="@+id/ImageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView6"
            android:contentDescription="@string/txt_imageview"
            android:scaleType="fitXY"
            android:src="@drawable/img_1" />

        <!-- Schaltfläche mit Bild -->

        <TextView
            android:id="@+id/TextView7"
            style="@style/Widget.Text.H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImageView1"
            android:text="@string/txt_imagebutton" />

        <ImageButton
            android:id="@+id/ImageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView7"
            android:contentDescription="@string/txt_imagebutton"
            android:src="@drawable/ic_launcher" />

        <!-- Eingabefeld -->

        <TextView
            android:id="@+id/TextView8"
            style="@style/Widget.Text.H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImageButton1"
            android:text="@string/txt_edittext" />

        <EditText
            android:id="@+id/ed_views_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView8"
            android:inputType="textCapWords" />

        <!-- Auswahlkästchen -->

        <TextView
            android:id="@+id/TextView9"
            style="@style/Widget.Text.H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed_views_edit"
            android:text="@string/txt_checkbox" />

        <CheckBox
            android:id="@+id/cb_auswahl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView9"
            android:checked="true"
            android:text="@string/txt_auswahl1" />

        <CheckBox
            android:id="@+id/cb_auswahl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cb_auswahl1"
            android:text="@string/txt_auswahl2" />

        <CheckBox
            android:id="@+id/cb_auswahl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cb_auswahl2"
            android:text="@string/txt_auswahl3" />

        <!-- Optionsfeld -->

        <TextView
            android:id="@+id/TextView10"
            style="@style/Widget.Text.H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cb_auswahl3"
            android:text="@string/txt_radiobutton" />

        <RadioGroup
            android:id="@+id/RadioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView10" >

            <RadioButton
                android:id="@+id/rb_auswahl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_auswahl1" />

            <RadioButton
                android:id="@+id/rb_auswahl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/txt_auswahl2" />

            <RadioButton
                android:id="@+id/rb_auswahl3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_auswahl3" />
        </RadioGroup>

        <!-- Dropdown-Auswahl -->

        <TextView
            android:id="@+id/TextView11"
            style="@style/Widget.Text.H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RadioGroup1"
            android:text="@string/txt_spinner" />

        <Spinner
            android:id="@+id/Spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView11"
            android:entries="@array/fruechte" />

        <!-- Autocomplete-Textfeld -->

        <TextView
            android:id="@+id/TextView12"
            style="@style/Widget.Text.H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Spinner1"
            android:text="@string/txt_autocomplete" />

        <AutoCompleteTextView
            android:id="@+id/AutoCompleteTextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView12" />

        <!-- Fortschrittsanzeiger -->

        <TextView
            android:id="@+id/TextView13"
            style="@style/Widget.Text.H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AutoCompleteTextView1"
            android:text="@string/txt_progressbar" />

        <TextView
            android:id="@+id/TextView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView13"
            android:text="@string/txt_rund" />

        <LinearLayout
            android:id="@+id/LinearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView14" >

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12dp" />

            <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <TextView
            android:id="@+id/TextView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayout2"
            android:text="@string/txt_balken" />

        <ProgressBar
            android:id="@+id/ProgressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView15"
            android:layout_marginTop="12dp"
            android:max="100"
            android:progress="62" />

        <ProgressBar
            android:id="@+id/ProgressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ProgressBar1"
            android:layout_marginTop="12dp"
            android:indeterminate="true" />

        <!-- Such-/Positionsbalken -->

        <TextView
            android:id="@+id/TextView16"
            style="@style/Widget.Text.H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ProgressBar2"
            android:text="@string/txt_seekbar" />

        <SeekBar
            android:id="@+id/SeekBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView16" />

        <!-- Datumsauswahl-Widget -->

        <TextView
            android:id="@+id/TextView17"
            style="@style/Widget.Text.H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SeekBar1"
            android:text="@string/txt_datepicker" />

        <DatePicker
            android:id="@+id/DatePicker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView17"
            android:calendarViewShown="false" />

        <!-- Zeitauswahl-Widget -->

        <TextView
            android:id="@+id/TextView18"
            style="@style/Widget.Text.H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DatePicker1"
            android:text="@string/txt_timepicker" />

        <TimePicker
            android:id="@+id/TimePicker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView18" />

        <!-- Analoge Uhr -->

        <TextView
            android:id="@+id/TextView19"
            style="@style/Widget.Text.H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TimePicker1"
            android:text="@string/txt_analogclock" />

        <AnalogClock
            android:id="@+id/AnalogClock1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView19" />

        <!-- Digitale Uhr -->

        <TextView
            android:id="@+id/TextView20"
            style="@style/Widget.Text.H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AnalogClock1"
            android:text="@string/txt_digitalclock" />

        <DigitalClock
            android:id="@+id/DigitalClock1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView20" />
    </RelativeLayout>

</ScrollView>