<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Haupt-Theme der Anwendung -->
    <style name="Dashboard" parent="android:style/Theme.NoTitleBar">
        <item name="android:buttonStyle">@style/Widget.Button</item>
    </style>
    
    
    <!-- Widgets -->
    
    <style name="Widget" parent="@android:style/Widget">
			 "Widget"-Stilen/-Themes geerbt
			 werden sollen
		 -->
    </style>
    
    
    <!-- Buttons -->
    
    <style name="Widget.Button" parent="@android:style/Widget.Button">
        <item name="android:layout_marginTop">@dimen/raster2</item>
        <item name="android:layout_marginBottom">@dimen/raster2</item>
        <item name="android:minHeight">@dimen/raster10</item>
    </style>
    
    
    <!-- Labels/TextViews -->
    
    <style name="Widget.Text" parent="@android:style/Widget.TextView">
        <item name="android:layout_marginBottom">@dimen/raster1</item>
        <item name="android:layout_marginTop">@dimen/raster1 </item>
    </style>
    
    <style name="Widget.Text.H1">
        <item name="android:layout_marginTop">@dimen/raster2</item>
        <item name="android:layout_marginBottom">@dimen/raster2</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    <style name="Widget.Text.H2">
        <item name="android:layout_marginTop">@dimen/raster2</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- Textgrößen -->
    
    <style name="textLarge">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    <style name="textMedium">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    
    <!-- Layout-Stile -->
    
    <style name="paddedLayout">
        <item name="android:padding">@dimen/raster3</item>
    </style>
</resources>
